



<!----------------------> 
<%- include("../layout/head") %>

<link rel="stylesheet" href="/css/body.css">
<style>
  .form-group{
    width: 50%;
  }
</style>

  <body>
    <div class="aside" style="border: none;">
      <%- include("../layout/aside_admin") %>
    </div>
    <div class="content">
      <%- include("../layout/nav_admin") %>
      <!-- <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Thông tin tài khoản</h1>
    </div> -->


    <form class="form-signin" action="/edit-product" method="POST" enctype="multipart/form-data">
      <h2>Cập nhật sản phẩm</h2>
      <br>
  
    <br>
      <div class="form-group">   
        <input type="hidden" value="<%- danhsach._id %>" name="id" class="form-control" placeholder="id" required>     
    </div> 
      <div class="form-group">
        <img src="/upload/<%- danhsach.image %>" style="width: 50%; height: 20%;" >
          <input type="file" name="image" >      
   </div>
      
        <div class="form-group">       
            <input type="text" value="<%- danhsach.name %>" name="name" class="form-control" placeholder="Tên sản phẩm" >    
     </div>
        <div class="form-group"> 
          <input type="number" value="<%- danhsach.quantity %>"  name="quantity" class="form-control" placeholder="Số lượng" >
        </div>
        <div class="form-group"> 
          <input type="text" value="<%- danhsach.note %>"  name="note" class="form-control" placeholder="Mô tả" >
        </div>
        <div class="form-group">
          <div class="controls">
            <select class="form-control" id="cateID" name="cateID">
            
            <% item.forEach(function(cate){ %>
       
                 <option name="cateID" value="<%= cate._id%>"><%= cate.namecate%></option>
                 
           
      
        <%    }) %>
      </select>
          </div>
      </div>
          <div class="form-group"> 
            <input type="number" name="price"  value="<%- danhsach.price %>"class="form-control" placeholder="Giá bán" >
          
          </div>
        
        
        <button class="btn form-group btn-lg btn-warning btn-block text-uppercase" type="submit" style="width: 15%; margin-left: 15%;">Cập nhật</button>
        </form>

 
      
      </div>
      
       
  


        
</body>
 

 







